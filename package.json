{
  "$schema": "https://json.schemastore.org/package",
  "name": "template-typescript",
  "version": "1.0.0",
  "engines": {
    "node": ">=12"
  },
  "main": "dist/main.js",
  "scripts": {
    "tsconfig-generate-app": "node tsconfig-generate-app",
    "lint": "npm run tsconfig-generate-app && eslint --fix src/**/*.[jt]s",
    "test": "jest --passWithNoTests",
    "compile": "npm run lint && rimraf build && tsc --rootDir src --outDir build",
    "dist": "npm run compile && rimraf dist && ncc build build/main.js --out dist",
    "build": "npm run dist && npm run test"
  },
  "dependencies": {
    "@actions/core": "1.2.6",
    "@actions/github": "4.0.0",
    "@octokit/plugin-request-log": "1.0.3",
    "@octokit/plugin-retry": "3.0.7",
    "@octokit/plugin-throttling": "3.4.1"
  },
  "devDependencies": {
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "@vercel/ncc": "0.27.0",
    "eslint": "7.20.0",
    "eslint-config-prettier": "8.0.0",
    "eslint-plugin-github": "4.1.1",
    "eslint-plugin-jest": "24.1.5",
    "jest": "26.6.3",
    "jest-circus": "26.6.3",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.1",
    "typescript": "4.1.5"
  }
}
